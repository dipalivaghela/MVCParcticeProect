@model IEnumerable<Domain.Model.Dtos.PatientViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center">Patients</h1>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="name">Name :</label>
        <input type="text" id="name" name="name" class="form-control" value="@ViewBag.SearchName" />
    </div>
    <br />
    <button type="submit" class="btn btn-dark">Search</button><br /><br />
</form>

<script>
    $(document).ready(function () {
        $('#name').autocomplete({
            source: '@Url.Action("Index", "Patients")',
            minlength : 1,
        });
    });
</script>

<table  class="table table-hover table-dark">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Gender</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Id</td>
                <td>@patient.Name</td>
                <td>@patient.Gender</td>
                <td>@patient.DateOfBirth</td>
                <td>

                    <a href="@Url.Action("Edit", new { id = patient.Id }) " class="btn btn-light">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = patient.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-dark">Create New</a>
<style>
    .pagination {
        margin-top: 10px;
    }

    .pagination a,
    .pagination span {
        padding: 8px 12px;
        border: 1px solid #ccc;
        margin-right: 5px;
        text-decoration: none;
        color: #333;
        cursor: pointer;
    }

    .pagination a:hover {
        background-color: #f2f2f2;
    }

    .pagination .disabled {
        color: #aaa;
        pointer-events: none;
        cursor: not-allowed;
    }
</style>

<div class="pagination">
    @if (ViewBag.PageNumber > 1)
    {
        <a href="@Url.Action("Index", new { page = ViewBag.PageNumber - 1, pageSize = ViewBag.PageSize, searchQuery = ViewBag.SearchQuery })" class="prev">Previous</a>
    }
    else
    {
        <span class="disabled">Previous</span>
    }

    @for (int i = 1; i <= (int)Math.Ceiling((double)ViewBag.TotalItems / ViewBag.PageSize); i++)
    {
        if (i == ViewBag.PageNumber)
        {
            <span>@i</span>
        }
        else
        {
            <a href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize, searchQuery = ViewBag.SearchQuery })">@i</a>
        }
    }

    @if (ViewBag.PageNumber < (int)Math.Ceiling((double)ViewBag.TotalItems / ViewBag.PageSize))
    {
        <a href="@Url.Action("Index", new { page = ViewBag.PageNumber + 1, pageSize = ViewBag.PageSize, searchQuery = ViewBag.SearchQuery })" class="next">Next</a>
    }
    else
    {
        <span class="disabled">Next</span>
    }
</div>
