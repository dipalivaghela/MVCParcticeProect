<style>
    .pagination {
        margin-top: 10px;
    }

    .pagination a,
    .pagination span {
        padding: 8px 12px;
        border: 1px solid #ccc;
        margin-right: 5px;
        text-decoration: none;
        color: #333;
        cursor: pointer;
    }

    .pagination a:hover {
        background-color: #f2f2f2;
    }

    .pagination .disabled {
        color: #aaa;
        pointer-events: none;
        cursor: not-allowed;
    }
</style>

<div class="pagination">
    @if (ViewBag.PageNumber > 1)
    {
        <a href="@Url.Action("Index", new { page = ViewBag.PageNumber - 1, pageSize = ViewBag.PageSize, searchQuery = ViewBag.SearchQuery })" class="prev">Previous</a>
    }
    else
    {
        <span class="disabled">Previous</span>
    }

    @for (int i = 1; i <= (int)Math.Ceiling((double)ViewBag.TotalItems / ViewBag.PageSize); i++)
    {
        if (i == ViewBag.PageNumber)
        {
            <span>@i</span>
        }
        else
        {
            <a href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize, searchQuery = ViewBag.SearchQuery })">@i</a>
        }
    }

    @if (ViewBag.PageNumber < (int)Math.Ceiling((double)ViewBag.TotalItems / ViewBag.PageSize))
    {
        <a href="@Url.Action("Index", new { page = ViewBag.PageNumber + 1, pageSize = ViewBag.PageSize, searchQuery = ViewBag.SearchQuery })" class="next">Next</a>
    }
    else
    {
        <span class="disabled">Next</span>
    }
</div>
