    ViewData["Title"] = "Create";
}

<h1>Add Patient</h1>

@using (Html.BeginForm())
{
    <div>
        <label for="Name">Name:</label>
        @Html.TextBoxFor(m => m.Name)
        @Html.ValidationMessageFor(m => m.Name)
    </div>

